<div class='mt-4'>
    <h2>Khóa học của tôi</h2>
    <table class='table table-striped table-bordered'>
        <thead>
            <tr>
                <th>Stt</th>
                <th>Tên khóa học</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <td>{{sum @index 1}}</td>
                    <td style='width: 250px'>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{formatDate this.createdAt 'DD/MM/YYYY'}}</td>
                    <td style='width: 150px'>
                        <a
                            href='/courses/{{this._id}}/edit'
                            class='btn btn-primary'
                        >Sửa</a>
                        <form
                            action='/courses/{{this.id}}'
                            method='POST'
                            class='d-inline'
                        >
                            <input
                                type='hidden'
                                name='_method'
                                value='DELETE'
                            />
                            <button class='btn btn-danger'>Xóa</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>