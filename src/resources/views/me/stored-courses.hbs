<form class='mt-4' name='container-form' method="POST" action="/courses/handle-form-actions">
    <div>
        <h2>Khóa học của tôi</h2>
        <a href='/me/trash/courses'>Thùng rác ({{countCourses}})</a>

        <div
            class='form-check d-flex align-items-center my-4'
            style='gap: 10px'
        >
            <label class='form-check-label d-flex align-items-center'>
                <input
                    type='checkbox'
                    class='form-check-input'
                    id='select-all'
                    value='checkedValue'
                />
                Select all
            </label>

            <div class='form-group-sm'>
                <select class='form-control-sm w-100' name='action' required>
                    <option value="">-- Action --</option>
                    <option value='delete'>Xóa</optionn>
                </select>
            </div>

            <button type='submit'  class='btn btn-primary btn-remove-select-box disabled' >Apply</button>
        </div>
    </div>
    <table class='table table-striped table-bordered'>
        <thead>
            <tr>
                <th></th>
                <th>Stt</th>
                <th>Tên khóa học</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <td>
                        <input
                            type='checkbox'
                            name='coursesIds[]'
                            id=''
                            value='{{this._id}}'
                            class='select-course'
                        />
                    </td>
                    <td>{{sum @index 1}}</td>
                    <td style='width: 250px'>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{formatDate this.createdAt 'DD/MM/YYYY'}}</td>
                    <td style='width: 150px'>
                        <a
                            href='/courses/{{this._id}}/edit'
                            class='btn btn-primary'
                        >Sửa</a>
                        <a
                            data-toggle='modal'
                            data-target='#modelId'
                            class='btn btn-danger text-white'
                            data-id='{{this._id}}'
                        >Xóa</a>
                    </td>
                </tr>

            {{else}}
                <tr>
                    <td colspan='5' class='text-center'>Không có khóa học nào
                        <a href='/courses/create'>Đăng khóa học</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{! Model }}
<div
    class='modal fade'
    id='modelId'
    tabindex='-1'
    role='dialog'
    aria-labelledby='modelTitleId'
    aria-hidden='true'
>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                Bạn có chắc chắn xóa khóa học này không?
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-danger btn-delete-course'
                >Delete</button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Close</button>
            </div>
        </div>
    </div>
    <div>
</div>

{{! Delete hidden form }}
<form name='delete-course-form' method='POST'></form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var courseId;
        var deleteForm = document.forms['delete-course-form'];

        $('#modelId').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
            var btnDeleteCourses = document.querySelector('.btn-delete-course');
            btnDeleteCourses.onclick = function () {
                deleteForm.action = '/courses/' + courseId + '?_method=DELETE';
                deleteForm.submit();
            };
        });

        const selectAllCheckbox = document.getElementById('select-all');
        const courseCheckboxes = document.querySelectorAll('.select-course');

        selectAllCheckbox.addEventListener('change', () => {
            const isChecked = selectAllCheckbox.checked;
            courseCheckboxes.forEach((checkbox) => {
                checkbox.checked = isChecked;
            });
            renderCheckAllSubmitBtn()
        });

        courseCheckboxes.forEach((checkbox) => {
            checkbox.addEventListener('change', () => {
                var isChecked = courseCheckboxes.length === document.querySelectorAll('input[name="coursesIds[]"]:checked').length
                selectAllCheckbox.checked = isChecked;
                renderCheckAllSubmitBtn()
            });
        });
        const form = document.querySelector('form[name="container-form"]');
        const btnRemoveSelectBox = document.querySelector('.btn-remove-select-box');

        form.addEventListener('submit', (e) => {
            const checkDisabled = btnRemoveSelectBox.classList.contains('disabled');
            if (checkDisabled) {
                e.preventDefault();
            }
        });

        // Check disable
        function renderCheckAllSubmitBtn() {
            const checkedCheckboxes = document.querySelectorAll('input[name="coursesIds[]"]:checked').length;

            if (checkedCheckboxes > 0) {
                btnRemoveSelectBox.classList.remove('disabled');
            } else {
                btnRemoveSelectBox.classList.add('disabled');
            }
        }
    });
</script>