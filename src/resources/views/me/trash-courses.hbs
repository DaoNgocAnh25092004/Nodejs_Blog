<form class='mt-4' name='container-form' method='post' action='/courses/handle-form-actions'>
    <div>
        <h2>Khóa học đã xóa</h2>
        <a href='/me/stored/courses'>Quay lại danh sách khóa học</a>
        <div
            class='form-check d-flex align-items-center my-4'
            style='gap: 10px'
        >
            <label class='form-check-label d-flex align-items-center'>
                <input
                    type='checkbox'
                    class='form-check-input'
                    id='select-all'
                    value='checkedValue'
                />
                Select all
            </label>

            <div class='form-group-sm'>
                <select class='form-control-sm w-100' name='action' required>
                    <option value="">-- Action --</option>
                    <option value='force-delete'>Xóa Vĩnh viễn</optionn>
                    <option value='restore'>Khôi phuc</optionn>
                </select>
            </div>

            <button type='submit'  class='btn btn-primary btn-remove-select-box disabled' >Apply</button>
        </div>
    </div>
    <table class='table table-striped table-bordered'>
        <thead>
            <tr>
                <th></th>
                <th>Stt</th>
                <th>Tên khóa học</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <td>
                        <input
                            type='checkbox'
                            name='coursesIds[]'
                            id=''
                            value='{{this._id}}'
                            class='select-course'
                        />
                    </td>
                    <td>{{sum @index 1}}</td>
                    <td style='width: 250px'>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{formatDate this.createdAt 'DD/MM/YYYY'}}</td>
                    <td style='width: 300px'>
                        <a
                            href=''
                            data-id='{{this._id}}'
                            class='btn btn-primary btn-restore'
                        >Khôi phục</a>
                        <a
                            data-toggle='modal'
                            data-target='#modelId'
                            class='btn btn-danger text-white'
                            data-id='{{this._id}}'
                        >Xóa vĩnh viễn</a>
                    </td>
                </tr>

            {{else}}
                <tr>
                    <td colspan='5' class='text-center'>Thùng rác trống
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</form>

{{! Model }}
<div
    class='modal fade'
    id='modelId'
    tabindex='-1'
    role='dialog'
    aria-labelledby='modelTitleId'
    aria-hidden='true'
>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                Hành động này sẽ xóa vĩnh viễn khóa học này. Bạn có chắc chắn
                không?
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-danger btn-delete-course'
                >Permanently Delete </button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Close</button>
            </div>
        </div>
    </div>
</div>

<form name='delete-course-form' method='POST'></form>

<form name='restore-course-form' method='POST'></form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var courseId;
        var deleteForm = document.forms['delete-course-form'];
        var restoreForm = document.forms['restore-course-form'];

        $('#modelId').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            courseId = button.data('id');
            var btnDeleteCourses = document.querySelector('.btn-delete-course');
            btnDeleteCourses.onclick = function () {
                deleteForm.action = '/courses/' + courseId + '/force/?_method=DELETE';
                deleteForm.submit();
            };
        });

        var btnRestoreCourses = document.querySelectorAll('.btn-restore');
        btnRestoreCourses.forEach(function (btn) {
            btn.onclick = function (e) {
                e.preventDefault();
                var courseId = $(this).data('id');
                restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
                restoreForm.submit();
            };
        });

        const selectAllCheckbox = document.getElementById('select-all');
        const courseCheckboxes = document.querySelectorAll('.select-course');

        selectAllCheckbox.addEventListener('change', () => {
            const isChecked = selectAllCheckbox.checked;
            courseCheckboxes.forEach((checkbox) => {
                checkbox.checked = isChecked;
            });
            renderCheckAllSubmitBtn();
        });

        courseCheckboxes.forEach((checkbox) => {
            checkbox.addEventListener('change', () => {
                var isChecked = courseCheckboxes.length === document.querySelectorAll('input[name="coursesIds[]"]:checked').length;
                selectAllCheckbox.checked = isChecked;
                renderCheckAllSubmitBtn();
            });
        });

        const form = document.querySelector('form[name="container-form"]');
        const btnRemoveSelectBox = document.querySelector('.btn-remove-select-box');

        form.addEventListener('submit', (e) => {
            const checkDisabled = btnRemoveSelectBox.classList.contains('disabled');
            if (checkDisabled) {
                e.preventDefault();
            }
        });

        // Check disable
        function renderCheckAllSubmitBtn() {
            const checkedCheckboxes = document.querySelectorAll('input[name="coursesIds[]"]:checked').length;

            if (checkedCheckboxes > 0) {
                btnRemoveSelectBox.classList.remove('disabled');
            } else {
                btnRemoveSelectBox.classList.add('disabled');
            }
        }
    });
</script>