<div class="search-form mt-5">
  <form method="post">
    <div class="form-group">
      <label for="search-input">Từ khóa</label>
      <input
        type="text"
        class="form-control"
        placeholder="Enter keyword"
        id="search-input"
        name="q"
      />
    </div>

    <div class="form-group">
      <label for="category-select">Danh mục</label>
      <select class="form-control" id="category-select" name="category">
        <option value="">Tất cả</option>
        <option value="1">Thể thao</option>
        <option value="2">Du lịch</option>
        <option value="3">Công nghệ</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tìm kiếm</button>
  </form>
</div>