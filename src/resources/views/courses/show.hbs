<div class='mt-4 row'>

    <div class='col-lg-4'>
        <p>Price: ${{course.price}}</p>

    </div>
    <div class='col-lg-8'>
        <iframe
            width='560'
            height='315'
            src='https://www.youtube.com/embed/{{course.video}}'
            frameborder='0'
            allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture'
            allowfullscreen
        ></iframe>
        <h1>{{course.name}}</h1>
        <p>{{course.description}}</p>
    </div>
</div>